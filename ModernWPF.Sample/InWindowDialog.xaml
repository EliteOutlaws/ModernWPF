<modern:DialogControl x:Class="ModernWPF.Sample.InWindowDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:modern="http://modernwpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="8 68 8 8" MaxWidth="400" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock TextWrapping="Wrap" VerticalAlignment="Top">Just a dialog that should be shown in the window</TextBlock>
            <TextBox x:Name="mybox" modern:TextBoxUI.WatermarkText="a textbox!"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" x:Name="btnOk" IsDefault="True" MinWidth="75" Click="btnOk_Click" ></Button>
            <Button Content="Cancel" x:Name="btnCancel" MinWidth="75" Click="btnCancel_Click" ></Button>
        </StackPanel>
    </Grid>
</modern:DialogControl>
